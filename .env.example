# Einkaufsliste Environment Configuration
# Copy this file to .env and set your secure values

# JWT Secret for Backend Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-key-change-this

# Admin Password for Backend and API
# Use a strong, unique password
ADMIN_PASSWORD=your-secure-admin-password-change-this

# GitHub Webhook Secret (if using webhook deployment)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Database Configuration
DATABASE_PATH=./backend/db.sqlite

# Server Configuration
BACKEND_PORT=4000
API_PORT=5000
FRONTEND_PORT=3000
WEBHOOK_PORT=9000

# Production Settings
NODE_ENV=production
